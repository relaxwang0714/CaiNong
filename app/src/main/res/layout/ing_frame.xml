<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/ing_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ing_page_daifahuo"
            android:text="待发货"
            android:clickable="true"
            android:textColor="@color/textcolor_selector"
            android:background="@drawable/background_selector"
            android:focusable="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ing_page_daifukuan"
            android:text="待付款"
            android:clickable="true"
            android:textColor="@color/textcolor_selector"
            android:background="@drawable/background_selector"
            android:focusable="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ing_page_fahuo"
            android:text="已发货"
            android:clickable="true"
            android:textColor="@color/textcolor_selector"
            android:background="@drawable/background_selector"
            android:focusable="true"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ing_page_tuikuan"
            android:text="退款中"
            android:clickable="true"
            android:textColor="@color/textcolor_selector"
            android:background="@drawable/background_selector"
            android:focusable="true"
            android:textSize="20sp"/>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ing_container">

    </FrameLayout>
</LinearLayout>
